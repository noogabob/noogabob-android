<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.start.create.CreateDogFragment">


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans_cjkkr_medium"
                android:lineSpacingExtra="9sp"
                android:text="이름"
                android:textColor="@color/colorFocusText"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans_cjkkr_medium"
                android:lineSpacingExtra="9sp"
                android:text="나이"
                android:textColor="@color/colorFocusText"
                android:textSize="18sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/noto_sans_cjkkr_regular"
                android:hint="꼬미"
                android:inputType="textPersonName"
                android:lineSpacingExtra="8sp"
                android:textColor="#707070"
                android:textSize="16sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/editTextTextPersonName5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/noto_sans_cjkkr_regular"
                android:hint="4세"
                android:inputType="textPersonName"
                android:lineSpacingExtra="8sp"
                android:textColor="#707070"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="30dp"
            android:lineSpacingExtra="9sp"
            android:fontFamily="@font/noto_sans_cjkkr_medium"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@color/colorFocusText"
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="품종" />

        <AutoCompleteTextView
            android:drawableLeft="@drawable/ic_baseline_search"
            android:fontFamily="@font/noto_sans_cjkkr_regular"
            android:id="@+id/autoCompleteTextView"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#707070"
            android:hint="포메라니안"
            android:lineSpacingExtra="8sp"
            android:layout_width="match_parent"
            android:completionThreshold="2"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/colorFocusText"
            android:layout_marginTop="30dp"
            android:lineSpacingExtra="9sp"
            android:fontFamily="@font/noto_sans_cjkkr_medium"
            android:textStyle="normal"
            android:textSize="18sp"
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="식사 시간" />

        <ListView
            android:id="@+id/list_view_bab_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:scrollbars="none"
            tools:listitem="@layout/item_bab_time" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_marginTop="30dp"
            app:borderWidth="0dp"
            android:text="식사 시간"
            android:fontFamily="@font/noto_sans_cjkkr_bold"
            android:backgroundTint="@color/colorPrimary"
            app:icon="@drawable/ic_baseline_add_white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/colorStartActive"
            android:fontFamily="@font/noto_sans_cjkkr_regular"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="54dp"
            android:text="정보 등록" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>