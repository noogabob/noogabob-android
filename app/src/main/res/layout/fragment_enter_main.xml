<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.start.enterGroup.EnterMainFragment">


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans_cjkkr_medium"
                android:lineSpacingExtra="9sp"
                android:text="이름"
                android:textColor="@color/color_4a3319"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans_cjkkr_medium"
                android:lineSpacingExtra="9sp"
                android:text="나이"
                android:textColor="@color/color_4a3319"
                android:textSize="18sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:includeFontPadding="false"
                android:id="@+id/readonly_dog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/noto_sans_cjkkr_regular"
                android:inputType="textPersonName"
                android:lineSpacingExtra="8sp"
                android:textColor="#707070"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:includeFontPadding="false"
                android:enabled="false"

                android:id="@+id/readonly_dog_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/noto_sans_cjkkr_regular"
                android:inputType="textPersonName"
                android:lineSpacingExtra="8sp"
                android:textColor="#707070"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="30dp"
            android:lineSpacingExtra="9sp"
            android:fontFamily="@font/noto_sans_cjkkr_medium"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@color/color_4a3319"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="품종" />

        <AutoCompleteTextView
            android:enabled="false"
            android:includeFontPadding="false"

            android:id="@+id/readonly_dog_kind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="2"
            android:fontFamily="@font/noto_sans_cjkkr_regular"
            android:lineSpacingExtra="8sp"
            android:textColor="#707070"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_cjkkr_medium"
                android:lineSpacingExtra="9sp"
                android:text="식사 시간"
                android:textColor="@color/color_4a3319"
                android:textSize="18sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/readonly_linear_bob_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_enter_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="54dp"
            android:backgroundTint="@color/color_aa5900"
            android:fontFamily="@font/noto_sans_cjkkr_bold"
            android:text="그룹 입장하기"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>