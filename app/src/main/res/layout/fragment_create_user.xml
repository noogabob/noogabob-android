
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.start.enterGroup.CreateUserFragment">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_cjkkr_medium"
                android:lineSpacingExtra="9sp"
                android:text="이름"
                android:textColor="@color/colorFocusText"
                android:textSize="18sp"

                android:textStyle="normal" />

            <EditText
                android:id="@+id/edit_start_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#cccccc"
                android:ems="10"
                android:fontFamily="@font/noto_sans_cjkkr_regular"
                android:hint="홍길동"
                android:inputType="textPersonName"
                android:lineSpacingExtra="8sp"
                android:textColor="#707070"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/noto_sans_cjkkr_medium"
                android:lineSpacingExtra="9sp"
                android:text="가족 구성원"
                android:textColor="@color/colorFocusText"
                android:textSize="18sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#cccccc"
                android:ems="10"
                android:fontFamily="@font/noto_sans_cjkkr_regular"
                android:hint="아들"
                android:inputType="textPersonName"
                android:lineSpacingExtra="8sp"
                android:textColor="#707070"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_create_user_to_dog"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="54dp"
            android:src="@drawable/ic_baseline_arrow_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
